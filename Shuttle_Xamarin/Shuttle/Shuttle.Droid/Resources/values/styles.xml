<resources>

  <!--<style name="Theme.Splash" parent="android:Theme">-->
  <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
    
    <item name="android:windowBackground"> @drawable/splashscreen </item> 
    <item name="android:windowNoTitle">true</item>

    <!-- wird im Splash Screen erst ab einem mindest SDK von 21 berÃ¼cksichtigt -->
    <!-- <item name="android:colorPrimaryDark">#770000</item> -->
    <!-- <item name="android:statusBarColor">#770000</item> -->

    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style> 
  
  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <!--<item name="colorPrimary">#2196F3</item>-->
    <item name="colorPrimary">#2dc2f4</item>

    <!-- colorPrimaryDark is used for the status bar -->
    <!--<item name="colorPrimaryDark">#1976D2</item>-->
    <item name="colorPrimaryDark">#156dbd</item>

    <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
    <!--<item name="colorAccent">#FF4081</item>-->
    <!--gleiche Farbe wie colorPrimary-->
    <item name="colorAccent">#2dc2f4</item>

    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <!--auskommentiert damit DatePicker die gleiche Farbe wie die anderen hat-->
    <!--<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>-->
  </style>

